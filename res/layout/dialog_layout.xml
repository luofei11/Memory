<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88222222"
    android:padding="10dp"
    android:orientation="vertical" >
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true">	    
	    <TextView
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:text="@string/app_name" 
	        android:textSize="15sp"
	        android:background="@drawable/top"
	        android:padding="10dp"
	        android:id="@+id/title"
	        android:textColor="@android:color/white"
	        android:gravity="center_vertical"
	        android:drawableLeft="@drawable/notificationbar_icon_logo_normal"/>
		<ImageView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:contentDescription="@string/app_name"
		    android:padding="5dp"
		    android:id="@+id/exit"
		    android:src="@drawable/floating_content_icon_delete_default"/>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/title"
		    android:id="@+id/notify"
		    android:background="#2871D5"
		    android:orientation="vertical">
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/notify1"
		        android:layout_gravity="center_horizontal"
		        android:textColor="@android:color/white"
		        android:text="@string/phone_info"
		        android:textSize="13sp"/>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/notify2"
		        android:layout_margin="10dp"
		        android:lines="2"
		        android:layout_gravity="center_horizontal"
		        android:text="@string/app_name"
		        android:textColor="@android:color/white"
		        android:textSize="13sp"/>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_below="@id/notify"
		    android:background="@drawable/bottom"
		    android:layout_height="wrap_content">
	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/aviliabel"
		        android:layout_weight="1"
		        android:gravity="center|bottom"
		        android:layout_gravity="center"
		        android:text="@string/app_name"/>
		    <FrameLayout 
		        android:layout_width="90dp"
		        android:layout_height="90dp">		        
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/clear"
			        android:textColor="#ffffff"
			        android:layout_gravity="center"
			        android:textSize="12sp"
			        android:visibility="gone"
			        android:id="@+id/clear_txt"/>
			    <ImageView 
			        android:visibility="gone"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:background="@drawable/clear_fan_bg"
			        android:src="@drawable/clear_fan"
			        android:id="@+id/clear_image"/>
			    <Button 
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_margin="10dp"
			        android:id="@+id/clear_btn"
			        android:background="@drawable/btn_bg"/>
		    </FrameLayout>
		    <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/running"
		        android:gravity="center|bottom"
		        android:layout_weight="1"
		        android:layout_gravity="center"
		        android:text="@string/app_name"/>
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>
